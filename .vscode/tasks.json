{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Debug Build",
            "type": "shell",
            "command": "C:\\Users\\Moyses\\Envs\\pyqt_env\\Scripts\\pyinstaller",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "--onefile",
                "--add-data",
                {
                    "value": "./src/resources/;resources/",
                    "quoting": "strong"
                },
                "--debug=all",
                {
                    "value": "./src/runner.py",
                    "quoting": "weak"
                }
            ]
        },
        {
            "label": "Production Build",
            "type": "shell",
            "command": "C:\\Users\\Moyses\\Envs\\pyqt_env\\Scripts\\pyinstaller",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "--onefile",
                "--noconsole",
                "--add-data",
                {
                    "value": "./src/resources/;resources/",
                    "quoting": "strong"
                },
                "--name",
                {
                    "value": "SkyMP Luncher",
                    "quoting": "strong"
                },
                "--icon",
                {
                    "value": "./src/icon.ico",
                    "quoting": "weak"
                },
                {
                    "value": "./src/runner.py",
                    "quoting": "weak"
                }
            ]
        },
        {
            "label": "Nuitka Debug Build",
            "type": "shell",
            "command": "C:\\Users\\Moyses\\Envs\\pyqt_env\\Scripts\\nuitka",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "--plugin-enable=pyside6",
                "--include-data-dir=src/resources=resources/",
                "--windows-icon-from-ico=src/icon.ico",
                "--output-dir=./dist",
                "-o",
                {
                    "value": "./dist/nuitka_launcher.exe",
                    "quoting": "strong"
                },
                "--standalone",
                "--onefile",
                {
                    "value": "./src/runner.py",
                    "quoting": "strong"
                },
            ]
        },
    ]
}